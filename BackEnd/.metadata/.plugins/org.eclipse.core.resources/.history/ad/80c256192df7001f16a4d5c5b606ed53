package com.portfolio.service;

import com.google.api.client.http.AbstractInputStreamContent;
import com.google.api.client.http.InputStreamContent;
import com.google.api.services.drive.Drive;
import com.google.api.services.drive.model.File;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;
import java.util.Collections;

@Service
public class GoogleDriveService {

    private final Drive googleDrive;

    public GoogleDriveService(Drive googleDrive) {
        this.googleDrive = googleDrive;
    }

    public String uploadFile(MultipartFile file) throws IOException {
        File fileMetadata = new File();
        fileMetadata.setName(file.getOriginalFilename());
        fileMetadata.setParents(Collections.singletonList("YOUR_GOOGLE_DRIVE_FOLDER_ID")); 

        AbstractInputStreamContent uploadStreamContent = 
            new InputStreamContent(file.getContentType(), file.getInputStream());

        File uploadedFile = googleDrive.files().create(fileMetadata, uploadStreamContent)
                .setFields("id")
                .execute();

        return uploadedFile.getId();
    }
}